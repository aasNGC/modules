process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
 

    withName: ASCAT_PURITY {
        ext.args  = [  general :[
                          purity = '0.7'
                    ]]
    }

    withName: ASCAT_PLOIDY {
        ext.args  = [  general :[
                          ploidy = '1.7'
                    ]]
    }

}
