process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
 

    withName: ASCAT_SIMPLE {
        ext.args = [
          gender    :  'XY',
          minCounts :  '10',
          min_base_qual : '10',
          min_map_qual  : '10',
          chrom_names  : 'c("21","22")'
                  ]
    }



    withName: ASCAT_PLOIDY_AND_PURITY {
        ext.args = [
          gender : 'XX', 
          ploidy  : '1.7', 
          purity : '0.24',
          chrom_names  : 'c("21","22")'
                  ]
    }

    withName: ASCAT_CRAM {
        ext.args = [
          gender    : 'XX', 
          ref_fasta : '/home/ec2-user/input_files/fasta/human_g1k_v37.fasta',
          chrom_names  : 'c("21","22")'
                  ]
    }

}

